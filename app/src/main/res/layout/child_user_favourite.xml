<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingEnd="12dp"
    android:paddingStart="12dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:id="@+id/rl_root"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/name_title"
        android:textSize="10sp"
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignStart="@id/company_name"
        android:layout_alignLeft="@id/company_name"
        android:layout_alignBaseline="@id/name_title"
        android:layout_toRightOf="@id/name_title"
        android:id="@+id/name"
        android:textSize="10sp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/name_title" />

    <TextView
        android:layout_marginTop="6dp"
        android:layout_below="@+id/name_title"
        android:id="@+id/address_title"
        android:textSize="10sp"
        android:text="Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="6dp"
        android:layout_alignStart="@id/company_name"
        android:layout_alignLeft="@id/company_name"
        android:layout_alignBaseline="@id/address_title"
        android:layout_toRightOf="@+id/address_title"
        android:layout_below="@+id/name"
        android:id="@+id/location"
        android:textSize="10sp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/address_title" />

    <TextView
        android:layout_marginTop="6dp"
        android:layout_below="@+id/address_title"
        android:id="@+id/email_title"
        android:textSize="10sp"
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="6dp"
        android:layout_alignStart="@id/company_name"
        android:layout_alignLeft="@id/company_name"
        android:layout_alignBaseline="@id/email_title"
        android:layout_toRightOf="@+id/email_title"
        android:layout_below="@+id/location"
        android:id="@+id/email"
        android:textSize="10sp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/email_title" />

    <TextView
        android:layout_marginTop="6dp"
        android:layout_below="@+id/email_title"
        android:id="@+id/company_title"
        android:textSize="10sp"
        android:text="Company:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="6dp"
        android:layout_alignBaseline="@id/company_title"
        android:layout_toRightOf="@+id/company_title"
        android:layout_below="@+id/email_title"
        android:layout_marginLeft="5dp"
        android:id="@+id/company_name"
        android:textSize="10sp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/company_title"
        android:layout_marginStart="5dp" />

</RelativeLayout>