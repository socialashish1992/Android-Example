<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingEnd="12dp"
    android:paddingStart="12dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/name_title"
            android:textSize="10sp"
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignStart="@id/company_name"
            android:layout_alignLeft="@id/company_name"
            android:layout_alignBaseline="@id/name_title"
            android:layout_toRightOf="@id/name_title"
            android:id="@+id/name"
            android:textSize="10sp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/name_title" />

        <TextView
            android:layout_marginTop="6dp"
            android:layout_below="@+id/name_title"
            android:id="@+id/phone_title"
            android:textSize="10sp"
            android:text="Phone:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_alignStart="@id/company_name"
            android:layout_alignLeft="@id/company_name"
            android:layout_alignBaseline="@id/phone_title"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@id/phone_title"
            android:id="@+id/phone"
            android:textSize="10sp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/phone_title" />

        <TextView
            android:layout_marginTop="6dp"
            android:layout_below="@+id/phone_title"
            android:id="@+id/address_title"
            android:textSize="10sp"
            android:text="Address:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_alignStart="@id/company_name"
            android:layout_alignLeft="@id/company_name"
            android:layout_alignBaseline="@id/address_title"
            android:layout_toRightOf="@+id/address_title"
            android:layout_below="@+id/phone"
            android:id="@+id/location"
            android:textSize="10sp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/address_title" />

        <TextView
            android:layout_marginTop="6dp"
            android:layout_below="@+id/address_title"
            android:id="@+id/email_title"
            android:textSize="10sp"
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_alignStart="@id/company_name"
            android:layout_alignLeft="@id/company_name"
            android:layout_alignBaseline="@id/email_title"
            android:layout_toRightOf="@+id/email_title"
            android:layout_below="@+id/location"
            android:id="@+id/email"
            android:textSize="10sp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/email_title" />

        <TextView
            android:layout_marginTop="6dp"
            android:layout_below="@+id/email_title"
            android:id="@+id/company_title"
            android:textSize="10sp"
            android:text="Company:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_alignBaseline="@id/company_title"
            android:layout_toRightOf="@+id/company_title"
            android:layout_below="@+id/email_title"
            android:layout_marginLeft="5dp"
            android:id="@+id/company_name"
            android:textSize="10sp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/company_title"
            android:layout_marginStart="5dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_fav"
        android:layout_gravity="center"
        android:src="@drawable/ic_favorite_black_24dp"
        android:contentDescription="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>